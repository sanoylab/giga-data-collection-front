@{
    ViewData["Title"] = "Home Page";
}

    <div class="panel panel-headline" style="width: 20%; margin: 0 auto; margin-top: 100px;">
        <div class="panel-heading">
            <h3 class="panel-title">Login</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="uname" value="demo" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" value="demo" required>



               
                <a class="submit" asp-controller="Dashboard" asp-action="Index">Login</a>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>

          

        </div>

    </div>





